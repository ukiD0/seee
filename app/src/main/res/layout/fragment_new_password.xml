<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.NewPasswordFragment"
    android:theme="@style/Base.Theme.Session2">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:paddingBottom="30dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="New Password"
            android:layout_marginTop="90dp"
            style="@style/h1" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="275dp"
            android:layout_height="20dp"
            android:text="Enter new password"
            android:layout_marginTop="8dp"
            style="@style/h2"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Password"
            android:layout_marginTop="70dp"
            android:inputType="text"
            style="@style/h2"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/ic_eye_selecttor"
            app:passwordToggleTint="@color/black"
            android:textColorHint="@color/drk_gary"
            app:hintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="0dp"
                android:inputType="textPassword"
                android:background="@drawable/input_gary"
                style="@style/input_text"
                android:hint="**********"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Confirm Password"
            android:layout_marginTop="24dp"
            android:inputType="text"
            style="@style/h2"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_pass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/ic_eye_selecttor"
            app:passwordToggleTint="@color/black"
            android:textColorHint="@color/drk_gary"
            app:hintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="0dp"
                android:inputType="textPassword"
                android:background="@drawable/input_gary"
                style="@style/input_text"
                android:hint="**********"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_LogIn"
            android:layout_width="342dp"
            android:layout_height="46dp"
            android:background="@drawable/btn_selector"
            android:enabled="false"
            android:text="Log in"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            style="@style/btn"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


</ScrollView>