<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OTPVerFragment"
    android:theme="@style/Base.Theme.Session2">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:paddingBottom="30dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="OTP Verification"
            android:layout_marginTop="90dp"
            style="@style/h1" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="275dp"
            android:layout_height="20dp"
            android:text="Enter the 6 digit numbers sent to your email"
            android:layout_marginTop="8dp"
            style="@style/h2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="horizontal"
            android:gravity="center"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/o_one"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/otp_gray"
                android:inputType="number"
                android:maxLength="1"
                android:layout_marginLeft="1dp"
                android:textAlignment="center"
                android:layout_marginRight="30dp" />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/o_two"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/otp_gray"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:layout_marginRight="30dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/o_three"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/otp_gray"
                android:inputType="number"
                android:textAlignment="center"
                android:maxLength="1"
                android:layout_marginRight="30dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/o_four"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/otp_gray"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:layout_marginRight="30dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/o_five"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/otp_gray"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:layout_marginRight="30dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/o_six"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/otp_gray"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:layout_marginRight="30dp"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_SignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Code"
            style="@style/h2"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textColorLink="@color/primary_blue"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sendOTP"
            android:layout_width="342dp"
            android:layout_height="46dp"
            android:background="@drawable/btn_selector"
            android:enabled="false"
            android:text="Send OTP"
            android:layout_gravity="center"
            android:layout_marginTop="85dp"
            style="@style/btn"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>