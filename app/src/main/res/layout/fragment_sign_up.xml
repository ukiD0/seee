<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SignUpFragment"
    android:theme="@style/Base.Theme.Session2">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:paddingBottom="30dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Create an account"
            style="@style/h1" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="275dp"
            android:layout_height="20dp"
            android:text="Complete the sign up process to get started"
            android:layout_marginTop="8dp"
            style="@style/h2"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:text="Full name"
            android:layout_marginTop="33dp"

            style="@style/h2"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/input_gary"
            android:layout_marginTop="8dp"
            android:hint="Ivanov Ivan"
            style="@style/input_text"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Phone Number"
            android:layout_marginTop="24dp"
            android:inputType="text"
            style="@style/h2"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/input_gary"
            android:layout_marginTop="8dp"
            android:hint="+7(999)999-99-99"
            android:inputType="number"
            style="@style/input_text"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Email Address"
            android:layout_marginTop="24dp"
            android:inputType="text"
            style="@style/h2"/>
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/input_gary"
            android:layout_marginTop="8dp"
            android:hint="***********@mail.com"
            android:inputType="textEmailAddress"
            style="@style/input_text"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Password"
            android:layout_marginTop="24dp"
            android:inputType="text"
            style="@style/h2"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/ic_eye_selecttor"
            app:passwordToggleTint="@color/black"
            android:textColorHint="@color/drk_gary"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="0dp"
                android:inputType="textPassword"
                android:background="@drawable/input_gary"
                style="@style/input_text"
                android:hint="**********"
                android:textColorHint="@android:color/transparent"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Confirm Password"
            android:layout_marginTop="24dp"
            android:inputType="text"
            style="@style/h2"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/ic_eye_selecttor"
            app:passwordToggleTint="@color/black"
            android:textColorHint="@color/drk_gary"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="0dp"
                android:inputType="textPassword"
                android:background="@drawable/input_gary"
                style="@style/input_text"
                android:hint="**********"
                android:textColorHint="@android:color/transparent"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="37dp">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkb"
                android:layout_width="14dp"
                android:layout_height="14dp"
                style="@style/h2"
                android:button="@null"
                android:background="@drawable/checkbox_blue"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:text="@string/politic"
                android:textColorLink="@color/yellow"
                style="@style/h2"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signUp"
            android:layout_width="342dp"
            android:layout_height="46dp"
            android:background="@drawable/btn_selector"
            android:enabled="false"
            android:text="Sign Up"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            style="@style/btn"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_SignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SignIn"
            style="@style/h2"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textColorLink="@color/primary_blue"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or sign in using"
            android:layout_marginTop="18dp"
            style="@style/h2"
            android:layout_gravity="center"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_google"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>